<section class="main w-4/5 border border-solid border-black p-10 rounded-lg">
  <button class="mb-10">
    <a href="/games">

      < Back </a>
  </button>
  <div class="flex justify-between mb-3">
    <h1 class="font-bold text-3xl"><%=title%></h1>
  </div>
  <div class="max-w-xl">
    <form action="/create">
      <div class="flex gap-3 mb-5">
        <div class="w-full">
          <label for="game_name" class="font-bold">Game Name</label>
          <input id="game_name" type="text" name="game_name" class="bg-gray-300 rounded-lg p-3 w-full" placeholder="Enter a game name...">
        </div>
        <div class="w-full">
          <label for="release_date" class="font-bold">Release Date</label>
          <input id="release_date" type="date" name="release_date" class="bg-gray-300 rounded-lg p-3 w-full">
        </div>
      </div>
      <div>
        <h2 class="font-bold">Developer/s</h2>
        <div class="grid grid-cols-2 mb-5">
          <div>
            <input id="dev1" type="checkbox" name="developer" class=" bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="dev1">Activision</label>
          </div>
          <div>
            <input id="dev2" type="checkbox" name="developer" class=" bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="dev2">EA</label>
          </div>
          <div>
            <input id="dev3" type="checkbox" name="developer" class=" bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="dev3">EA</label>
          </div>
          <div>
            <input id="dev4" type="checkbox" name="developer" class=" bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="dev4">EA</label>
          </div>
        </div>
      </div>
      <div>
        <h2 class="font-bold">Genre/s</h2>
        <div class="grid grid-cols-2 mb-5">
          <div>
            <input id="genre1" type="checkbox" name="genre" class="bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="genre1">Action</label>
          </div>
          <div>
            <input id="genre2" type="checkbox" name="genre" class=" bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="genre2">Adventure</label>
          </div>
          <div>
            <input id="genre3" type="checkbox" name="genre" class=" bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="genre3">Adventure</label>
          </div>
          <div>
            <input id="genre4" type="checkbox" name="genre" class=" bg-gray-300 rounded-lg p-3 max-w-96">
            <label for="genre4">Adventure</label>
          </div>
        </div>
      </div>
      <div>
        <label for="description" class="font-bold">Description</label>
        <textarea name="description" id="description" class="block bg-gray-300 rounded-lg p-3 w-full" rows="8" placeholder="Enter a description..."></textarea>
      </div>
      <button type="submit" class="py-3 px-10 bg-blue-300 rounded-lg font-bold mt-5">Save</button>
    </form>
  </div>
</section>